extends ../layout

block content
    table(style="width:100%")
        tr
            th Серийный номер
            th Название на русском
            th Название на латыни
            th Принтер
            th Количество
            if data.length
                each item in data
                    tr
                        td=item.serial_id
                        td=item.title_rus
                        td=item.title_latin
                        td=item.printer
                        td=item.current_amount

